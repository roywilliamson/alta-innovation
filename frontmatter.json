{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "page",
      "pageBundle": false,
      "previewPath": "'/'",
      "filePrefix": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Layout",
          "name": "layout",
          "type": "string",
          "default": "../layouts/Layout.astro"
        }
      ]
    },
    {
      "name": "content",
      "pageBundle": false,
      "previewPath": null,
      "filePrefix": null,
      "fields": [
        {
          "title": "Content Title",
          "name": "contentTitle",
          "type": "string",
          "description": "Descriptive title for this content section (for CMS organization only)"
        },
        {
          "title": "Card Image",
          "name": "cardImage",
          "type": "image",
          "description": "Image to display on the Front Matter dashboard card",
          "isPreviewImage": true
        },
        {
          "title": "Section",
          "name": "section",
          "type": "choice",
          "choices": [
            "hero",
            "navigation",
            "expertise",
            "clients",
            "insights",
            "contact"
          ]
        },
        {
          "title": "Display Order",
          "name": "order",
          "type": "number",
          "description": "Order in which this section appears on the website (1 = first)"
        },
        {
          "title": "Published",
          "name": "published",
          "type": "boolean",
          "default": true,
          "description": "Toggle to show/hide this section on the live website. Uncheck to hide section while editing."
        },
        {
          "title": "Date",
          "name": "date",
          "type": "datetime",
          "description": "Date for card display (automatically synced with lastmod)"
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Subtitle",
          "name": "subtitle",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Image",
          "name": "image",
          "type": "image"
        },
        {
          "title": "Image Alt Text",
          "name": "imageAlt",
          "type": "string"
        },
        {
          "title": "Button Text",
          "name": "buttonText",
          "type": "string"
        },
        {
          "title": "Button Link",
          "name": "buttonLink",
          "type": "string"
        },
        {
          "title": "Statistics",
          "name": "statistics",
          "type": "fields",
          "fields": [
            {
              "title": "Value",
              "name": "value",
              "type": "string"
            },
            {
              "title": "Label",
              "name": "label",
              "type": "string"
            }
          ]
        },
        {
          "title": "Features",
          "name": "features",
          "type": "fields",
          "fields": [
            {
              "title": "Icon",
              "name": "icon",
              "type": "string"
            },
            {
              "title": "Title",
              "name": "title",
              "type": "string"
            },
            {
              "title": "Description",
              "name": "description",
              "type": "string"
            },
            {
              "title": "Highlights",
              "name": "highlights",
              "type": "list"
            }
          ]
        }
      ]
    }
  ],
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "Content",
      "path": "[[workspace]]/src/content"
    }
  ],
  "frontMatter.preview.host": "http://localhost:4322",
  "frontMatter.dashboard.openOnStart": false,
  "frontMatter.content.draftField": {
    "name": "draft",
    "type": "boolean"
  },
  "frontMatter.dashboard.content.card.fields.title": "contentTitle",
  "frontMatter.dashboard.content.card.fields.description": "description",
  "frontMatter.dashboard.content.card.fields.date": true,
  "frontMatter.dashboard.content.dateField": "lastmod",
  "frontMatter.content.sorting": [
    {
      "title": "Website Order",
      "name": "order",
      "order": "asc",
      "type": "number"
    },
    {
      "title": "Last modified (desc)",
      "name": "lastmod",
      "order": "desc"
    },
    {
      "title": "Content Title (asc)",
      "name": "contentTitle",
      "order": "asc"
    }
  ],
  "frontMatter.dashboard.content.pagination": false,
  "frontMatter.content.autoUpdateDate": true,
  "frontMatter.content.defaultSorting": "order",
  "frontMatter.dashboard.content.filters": [
    {
      "title": "All content",
      "value": ""
    },
    {
      "title": "ðŸ“¢ Published sections",
      "value": "published:true"
    },
    {
      "title": "ðŸš§ Unpublished sections",
      "value": "published:false"
    },
    {
      "title": "Hero Section",
      "value": "section:hero"
    },
    {
      "title": "Navigation",
      "value": "section:navigation"
    },
    {
      "title": "Services",
      "value": "section:expertise"
    },
    {
      "title": "Clients",
      "value": "section:clients"
    },
    {
      "title": "Research",
      "value": "section:insights"
    },
    {
      "title": "Contact",
      "value": "section:contact"
    }
  ],
  "frontMatter.content.fmHighlight": true
}