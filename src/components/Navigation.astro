---
// Navigation component for Innovation Nexus Consulting
import { getNavigationContent } from '../lib/content.ts';

const navContent = getNavigationContent();
const menuItems = navContent.menuItems || [];
---

<nav class="fixed top-0 w-full bg-white/95 backdrop-blur-sm z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <button
        data-scroll-to="top"
        class="text-xl font-bold text-gray-900 hover:text-orange-600 transition-colors cursor-pointer"
      >
        {navContent.title || "ALTA INNOVATION"}
      </button>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex space-x-8">
        {menuItems.map((item) => (
          <button data-scroll-to={item.link.replace('#', '')} class="text-gray-700 hover:text-orange-600 transition-colors">
            {item.label}
          </button>
        ))}
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="p-2 rounded-md text-gray-700 hover:text-orange-600 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-orange-500">
          <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden py-4 space-y-2 hidden">
      {menuItems.map((item) => (
        <button data-scroll-to={item.link.replace('#', '')} class="block w-full text-left px-4 py-2 text-gray-700 hover:bg-orange-50 rounded-md">
          {item.label}
        </button>
      ))}
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  
  let isOpen = false;
  
  mobileMenuButton?.addEventListener('click', () => {
    isOpen = !isOpen;
    
    if (isOpen) {
      mobileMenu?.classList.remove('hidden');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
    } else {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  });
  
  // Smooth scrolling for navigation links
  const scrollButtons = document.querySelectorAll('[data-scroll-to]');
  
  scrollButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      const target = (e.target as HTMLElement).getAttribute('data-scroll-to');
      if (target) {
        if (target === 'top') {
          // Scroll to top of page
          window.scrollTo({ top: 0, behavior: 'smooth' });
        } else {
          // Scroll to specific element
          const element = document.getElementById(target);
          if (element) {
            element.scrollIntoView({ behavior: 'smooth' });
          }
        }

        // Close mobile menu if open
        if (isOpen) {
          isOpen = false;
          mobileMenu?.classList.add('hidden');
          menuIcon?.classList.remove('hidden');
          closeIcon?.classList.add('hidden');
        }
      }
    });
  });
</script>
