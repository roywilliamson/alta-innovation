---
// Hero section for Innovation Nexus Consulting
import { WavyBackground } from './WavyBackground.tsx';
import { getHeroContent } from '../lib/content.ts';

const heroContent = getHeroContent();
---

<section class="min-h-screen relative overflow-hidden pt-16">
  <WavyBackground
    client:load
    containerClassName="absolute inset-0"
    colors={["#2563eb", "#3b82f6", "#60a5fa", "#93c5fd", "#dbeafe"]}
    waveOpacity={0.15}
    speed="fast"
    blur={8}
  >
    <div></div>
  </WavyBackground>
  <div class="relative z-10 min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50/80 via-sky-50/60 to-slate-50/40">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8 animate-fade-in">
        <div class="space-y-4">
          <p class="text-orange-600 font-medium tracking-wide uppercase text-sm">
            {heroContent.subtitle || "Senior Innovation Consultant"}
          </p>
          <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
            {heroContent.title || "Transforming Vision into Innovation"}
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed max-w-2xl">
            {heroContent.description || "Strategic advisory for CEOs navigating the convergence of green technology, deep tech, and artificial intelligence. From market entry to investment strategy, I help leaders build sustainable competitive advantages."}
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <button
            data-scroll-to="contact"
            class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 text-lg rounded-lg font-medium transition-colors duration-200 shadow-lg hover:shadow-xl"
          >
            {heroContent.primaryButtonText || "Schedule Consultation"}
          </button>
          <button
            data-scroll-to="insights"
            class="border-2 border-orange-600 text-orange-600 hover:bg-orange-50 px-8 py-4 text-lg rounded-lg font-medium transition-colors duration-200"
          >
            {heroContent.secondaryButtonText || "Download Insights"}
          </button>
        </div>

        <div class="flex items-center space-x-8 pt-8">
          {heroContent.statistics && heroContent.statistics.map((stat: any) => (
            <div class="text-center">
              <div class="text-3xl font-bold text-gray-900">{stat.value}</div>
              <div class="text-sm text-gray-600">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
      
      <div class="relative animate-fade-in-delay flex items-center justify-center h-80 md:h-96 lg:h-[34rem]">
        <img
          src={heroContent.image || "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?auto=format&fit=crop&w=800&q=80"}
          alt={heroContent.imageAlt || "Professional headshot"}
          class="w-64 h-64 md:w-80 md:h-80 lg:w-[32rem] lg:h-[32rem] object-contain drop-shadow-2xl"
        />
      </div>
    </div>
    
    <div class="text-center mt-20">
      <button
        data-scroll-to="expertise"
        class="animate-bounce text-gray-600 hover:text-orange-600 p-2 rounded-full hover:bg-gray-50 transition-colors duration-200"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </button>
    </div>
  </div>
  </div>
</section>

<script>
  // Smooth scrolling for hero buttons
  const heroButtons = document.querySelectorAll('[data-scroll-to]');
  
  heroButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      const target = (e.target as HTMLElement).getAttribute('data-scroll-to');
      if (target) {
        const element = document.getElementById(target);
        if (element) {
          element.scrollIntoView({ behavior: 'smooth' });
        }
      }
    });
  });
</script>
